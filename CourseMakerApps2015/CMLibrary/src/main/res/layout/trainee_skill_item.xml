<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/TSK_ITEM_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TSK_ITEM_txtNumber"
            style="@style/GreyCountBoxSmall"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/TSK_ITEM_txtSkillname"
            style="@style/Title3TextStyleBlack"
            android:text="Skill name here"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:layout_toRightOf="@id/TSK_ITEM_txtNumber"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/TSK_ITEM_bottom"
        android:layout_below="@id/TSK_ITEM_top"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TSK_ITEM_txtLevel"
            style="@style/BlueCountBoxSmall"
            android:text="0"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/TSK_ITEM_txtLevelName"
            style="@style/TextStyleBlue"
            android:text="Current Skill Level"
            android:layout_toLeftOf="@id/TSK_ITEM_txtLevel"
            android:layout_marginRight="15dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>