<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/TRSK_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:visibility="visible"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/TRSK_label"
            style="@style/Title2TextStyleGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/skills"
            android:textStyle="normal"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/TRSK_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/GreyCountBoxSmall"
            android:text="00" />

        <ImageView
            android:id="@+id/TRSK_imgNew"
            android:src="@drawable/ic_action_new"
            android:layout_toLeftOf="@id/TRSK_count"
            android:layout_marginRight="50dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <ListView
        android:id="@+id/TRSK_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/TRSK_layout"
        android:background="@color/grey"
        android:layout_marginTop="10dp"
        android:dividerHeight="1dp" />

</RelativeLayout>